{
  "extends": "@devvit/public-api/devvit.tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],
    "outDir": "dist",
    "noEmit": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist"]
}
